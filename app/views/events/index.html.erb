<div class="row ">
  <div class="eight columns">
    <div>
      <%= link_to "Connect Stripe", "https://connect.stripe.com/oauth/authorize?response_type=code&client_id=ca_CNJ3sMWTtZ43cVr3EGBO0mLBd3m63nio&scope=read_write" %>
    </div>
    <div>
      <%= link_to 'New Event', new_admin_event_path %>
    </div>
    <div>
      <%= link_to 'New Event Category', new_admin_event_category_path %>
    </div>
    <% @events.each do |event| %>
      <card class="event-card">
        <h4><%= event.title %></h4>
        <img src="http://via.placeholder.com/540x300">
        <div class="row">
          <div class="six columns">
            <p class="major-info"><%= event.location %></p>
            <p class="major-info"><%= event.start_at.strftime('%Y/%m/%d %H:%M') %></p>
          </div>
          <div class="six columns">
            <p class="ticket-price"><%= event.ticket_price %>å††</p>
            <%= link_to 'Purchase', new_event_purchase_path(event), class: 'button button-primary' %>
          </div>
        </div>
      </card>
    <% end %>
  </div>
  <sidebar class="four columns categories-sb">
    <card class="categories-card">
      <h4>Categories</h4>
      <ul>
        <li><a>KONKATSU</a></li>
        <li><a>KOIKATSU</a></li>  
        <li><a>GOURMET</a></li>
      </ul>
    </card>
    <card class="search-card">
      <h4>Search</h4>
      <input class="u-full-width" type="text">
      <a class='button button-primary u-full-width'>Search</a>
    </card>
  </sidebar>
</div>
